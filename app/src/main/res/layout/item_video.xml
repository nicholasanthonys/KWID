<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="210dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="10dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/video_poster"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:contentDescription="@string/movie_video"
        android:scaleType="fitCenter" />

    <Button
        android:id="@+id/btn_play_video_home"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginStart="126dp"
        android:layout_marginTop="51dp"
        android:background="@drawable/icbaseline_play_circle_outline"
        android:gravity="center" />

    <TextView
        android:id="@+id/text_video_title"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:maxLines="4"
        android:textStyle="bold"
        android:text="@string/movie_video"
        android:textAlignment="center"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        android:layout_marginBottom="-60dp"
        android:layout_alignBottom="@id/video_poster" />
</RelativeLayout>