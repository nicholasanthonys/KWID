<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:gravity="center_vertical"
    android:background="@drawable/rectangle_white_color_top_bottom_border">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/credit_card_image"
        android:contentDescription="@string/credit_card"
        android:layout_marginStart="15dp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/credit_card_name"
        android:text="@string/credit_card"
        android:textSize="14sp"
        android:textColor="@color/colorBlack"
        android:layout_marginStart="10dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/btn_navigate_next"
        android:src="@drawable/icbaseline_navigate_next"
        android:contentDescription="@string/navigate_next"
        android:layout_marginStart="15dp"
        android:layout_width="50dp"
        android:layout_height="50dp" />
</LinearLayout>