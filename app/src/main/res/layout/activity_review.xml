<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorDarkBlue"
    tools:context=".Activity.ReviewActivity">

    <ImageView
        android:id="@+id/btn_back_review"
        android:src="@drawable/icbaseline_arrow_back_white"
        android:contentDescription="@string/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_movie_poster"
        android:layout_width="200dp"
        android:layout_height="250dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="10dp"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/img_movie"
            android:contentDescription="@string/movie_poster"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_alignTop="@id/cardview_movie_poster"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="125dp"
        android:paddingTop="125dp"
        android:gravity="center_horizontal"
        android:background="@drawable/rounded_top_bottom_rect_shape_white">

        <TextView
            android:id="@+id/txt_movie_title"
            android:text="@string/movie_title"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="30dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/btn_img_star_1"
                android:src="@drawable/icround_star"
                android:contentDescription="@string/rounded_star_image"
                android:layout_marginStart="15dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:layout_width="45dp"
                android:layout_height="45dp" />

            <ImageView
                android:id="@+id/btn_img_star_2"
                android:src="@drawable/icround_star"
                android:contentDescription="@string/rounded_star_image"
                android:layout_marginStart="15dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:layout_width="45dp"
                android:layout_height="45dp" />

            <ImageView
                android:id="@+id/btn_img_star_3"
                android:src="@drawable/icround_star"
                android:contentDescription="@string/rounded_star_image"
                android:layout_marginStart="15dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:layout_width="45dp"
                android:layout_height="45dp" />

            <ImageView
                android:id="@+id/btn_img_star_4"
                android:src="@drawable/icround_star"
                android:contentDescription="@string/rounded_star_image"
                android:layout_marginStart="15dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:layout_width="45dp"
                android:layout_height="45dp" />

            <ImageView
                android:id="@+id/btn_img_star_5"
                android:src="@drawable/star_gray"
                android:contentDescription="@string/rounded_star_image"
                android:layout_marginStart="15dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:layout_width="45dp"
                android:layout_height="45dp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_publish"
            android:text="@string/publish"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textSize="16sp"
            android:layout_marginTop="30dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_my_location" />
    </LinearLayout>
</RelativeLayout>